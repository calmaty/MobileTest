<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5E5E"
    tools:context="com.example.christoffer.mobiletest.ChooseBetter"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/BetterButton0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="Player0"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/BetterButton1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/BetterButton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="Player1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/BetterButton2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BetterButton0" />

    <Button
        android:id="@+id/BetterButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="Player2"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/BetterButton3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BetterButton1" />

    <Button
        android:id="@+id/BetterButton3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="Player3"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/BetterButton4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BetterButton2" />

    <Button
        android:id="@+id/BetterButton4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="Player4"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BetterButton3" />
</android.support.constraint.ConstraintLayout>
